{
    "name": "sheet-metal",
    "version": "0.0.1",
    "description": "Turn your Google Sheets into APIs",
    "author": "@kiwicopple",
    "private": true,
    "scripts": {
        "dev": "nuxt",
        "dev2": "concurrently \"nuxt\" \"nodemon ./api\"",
        "build": "NODE_ENV=prod nuxt build",
        "migrate": "node-pg-migrate",
        "start": "NODE_ENV=prod nuxt start",
        "precommit": "npm run lint",
        "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
    },
    "dependencies": {
        "@nuxtjs/auth": "^4.5.2",
        "@nuxtjs/axios": "^5.3.3",
        "@nuxtjs/dotenv": "^1.3.0",
        "@nuxtjs/toast": "^3.0.1",
        "@sentry/node": "^4.1.1",
        "body-parser": "^1.18.3",
        "bulma": "^0.7.2",
        "cookie-parser": "^1.4.3",
        "cookie-universal-nuxt": "^2.0.5",
        "cross-env": "^5.0.1",
        "express": "^4.15.3",
        "express-jwt": "^5.3.1",
        "googleapis": "^34.0.0",
        "jsonwebtoken": "^8.3.0",
        "node-pg-migrate": "^3.11.0",
        "nuxt": "latest",
        "pg": "^7.5.0",
        "source-map-support": "^0.4.15",
        "winston": "^3.1.0"
    },
    "devDependencies": {
        "babel-eslint": "^7.2.3",
        "concurrently": "^4.0.1",
        "eslint": "^4.3.0",
        "eslint-config-standard": "^10.2.1",
        "eslint-loader": "^2.0.0",
        "eslint-plugin-html": "^3.1.1",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-node": "^5.1.1",
        "eslint-plugin-promise": "^3.5.0",
        "eslint-plugin-standard": "^3.0.1",
        "eslint-plugin-vue": "^4.7.1",
        "husky": "^1.1.2",
        "node-sass": "^4.9.3",
        "nodemon": "^1.18.4",
        "nuxt-sass-resources-loader": "^2.0.5",
        "prettier": "1.14.3",
        "pretty-quick": "^1.8.0",
        "sass-loader": "^7.1.0",
        "vue-style-loader": "^4.1.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
